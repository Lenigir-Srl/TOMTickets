<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--

     web.xml

     Overall, web.xml serves as a centralized configuration file that helps
     in defining the structure and behavior of a Java web application, 
     making it easier to deploy and manage the application within a servlet container.

     Read about each xml tag here
     https://docs.oracle.com/cd/E13222_01/wls/docs81/webapp/web_xml.html

-->


   <!-- 
     When the URL request is a directory name, WebLogic Server serves
     the first file specified in this element. If that file is not found,
     the server then tries the next file in the list. 
   -->
   <welcome-file-list>
        <welcome-file>/jsp/Homepage.jsp</welcome-file>
   </welcome-file-list>


   <!-- The servlet element contains the declarative data of a servlet. 
        Each servlet must be configured here !!
   -->
   <servlet>
        <servlet-name>hello_servlet</servlet-name>
        <servlet-class>HelloServlet</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Login</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>Signup</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>Profile</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>Error</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>ok</servlet-name>
        <servlet-class>OK</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Logout</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>testdb</servlet-name>
       <servlet-class>TestDB</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>eliminaProfilo</servlet-name>
       <servlet-class>DeleteProfile</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>visualizzaProfili</servlet-name>
       <servlet-class>VisualizzaProfili</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>gestioneEventi</servlet-name>
       <servlet-class>GestioneEventi</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>eliminaEvento</servlet-name>
       <servlet-class>DeleteEvent</servlet-class>
   </servlet>
   
   <servlet>
       <servlet-name>creaEvento</servlet-name>
       <servlet-class>CreaEvento</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>ottieniEvento</servlet-name>
       <servlet-class>GetEvento</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>ottieniEventi</servlet-name>
       <servlet-class>GetEventi</servlet-class>
   </servlet>

   <servlet>
       <servlet-name>ottieniProfili</servlet-name>
       <servlet-class>GetProfili</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>eventi</servlet-name>
        <servlet-class>VisualizzaEventi</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>evento</servlet-name>
        <servlet-class>VisualizzaEvento</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>acquistaevento</servlet-name>
        <servlet-class>AcquistaEvento</servlet-class>
   </servlet>

   <servlet>
        <servlet-name>terminaacquisto</servlet-name>
        <servlet-class>TerminaAcquisto</servlet-class>
   </servlet>

    <!--  Servlet and JSPs can access this data using getServletContext().method
        <context-param>
            <param-name>value_name</param-name>
            <param-value>10</param-value>
        </context-param>
    -->


    <!-- The servlet-mapping element defines a mapping between
         a servlet and a URL pattern -->
    <servlet-mapping>
        <servlet-name>hello_servlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>error</servlet-name>
	<url-pattern>/error</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ok</servlet-name>
        <url-pattern>/OK</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>testdb</servlet-name>
      <url-pattern>/testdb</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>logout</servlet-name>
      <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>eliminaProfilo</servlet-name>
      <url-pattern>/eliminaProfilo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>eventi</servlet-name>
      <url-pattern>/eventi</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>evento</servlet-name>
      <url-pattern>/evento</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>acquistaevento</servlet-name>
      <url-pattern>/acquistaevento</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>terminaacquisto</servlet-name>
      <url-pattern>/terminaacquisto</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>visualizzaProfili</servlet-name>
      <url-pattern>/visualizzaProfili</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>gestioneEventi</servlet-name>
      <url-pattern>/gestioneEventi</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>eliminaEvento</servlet-name>
      <url-pattern>/eliminaEvento</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>creaEvento</servlet-name>
      <url-pattern>/creaEvento</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>ottieniEvento</servlet-name>
      <url-pattern>/ottieniEvento</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>ottieniEventi</servlet-name>
      <url-pattern>/ottieniEventi</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>ottieniProfili</servlet-name>
      <url-pattern>/ottieniProfili</url-pattern>
    </servlet-mapping>

    <!-- Filters config -->
    <filter>
            <filter-name>AuthenticationFilter</filter-name>
            <filter-class>AuthenticationFilter</filter-class>
    </filter>

    <filter>
            <filter-name>AdminFilter</filter-name>
            <filter-class>AdminFilter</filter-class>
    </filter>


    <!-- Url to map the filter onto -->
    <filter-mapping>
            <filter-name>AuthenticationFilter</filter-name>
            <url-pattern>/profile</url-pattern>
    </filter-mapping>

    <filter-mapping>
            <filter-name>AuthenticationFilter</filter-name>
            <url-pattern>/eliminaProfilo</url-pattern>
    </filter-mapping>
  
    <filter-mapping>
            <filter-name>AuthenticationFilter</filter-name>
            <url-pattern>/OK</url-pattern>
    </filter-mapping>
  
    <filter-mapping>
            <filter-name>AuthenticationFilter</filter-name>
            <url-pattern>/acquistaevento</url-pattern>
    </filter-mapping>

    <filter-mapping>
            <filter-name>AuthenticationFilter</filter-name>
            <url-pattern>/terminaacquisto</url-pattern>
    </filter-mapping>

    <!-- Admin filter -->

    <filter-mapping>
            <filter-name>AdminFilter</filter-name>
            <url-pattern>/visualizzaProfili</url-pattern>
    </filter-mapping>

    <filter-mapping>
            <filter-name>AdminFilter</filter-name>
            <url-pattern>/gestioneEventi</url-pattern>
    </filter-mapping>

    <filter-mapping>
            <filter-name>AdminFilter</filter-name>
            <url-pattern>/eliminaEvento</url-pattern>
    </filter-mapping>

    <filter-mapping>
            <filter-name>AdminFilter</filter-name>
            <url-pattern>/creaEvento</url-pattern>
    </filter-mapping>

   <!-- Setup Session -->
   <session-config>
           <session-timeout>2</session-timeout>
   </session-config>

   <!-- Save images -->
   <multipart-config>
       <location>/tmp</location>
       <max-file-size>20848820</max-file-size>
       <max-request-size>418018841</max-request-size>
       <file-size-threshold>1048576</file-size-threshold>
   </multipart-config>

</web-app>
